<div class="row">
    <div class="large-6 large-offset-3 columns">
        <div class="panel">
            <h3>Sign Up!</h3>
            <%= form_for @user do |f|  %>
                <%= f.label :email  %>
                <%= f.email_field :email  %>
                <%= f.label :password  %>
                <%= f.password_field :password  %>
                <%= f.label :password_confirmation  %>
                <%= f.password_field :password_confirmation  %>
                <%= f.submit "Sign Up", class: "button"  %>
            <% end %>
        </div>
    </div>
</div>
